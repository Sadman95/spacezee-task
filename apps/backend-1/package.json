{
  "name": "backend-1",
  "version": "1.0.0",
  "main": "src/server.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc --build && tsc-alias",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint:init": "eslint --init",
    "lint:fix": "eslint --fix",
    "prettier:check": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prettier:fix": "prettier --write .",
    "lint:prettier": "npm lint:check && npm prettier:check",
    "test": "jest --watchAll --forceExit --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "lint-staged": {
    "src/**/*.ts": "npm lint:prettier"
  },
  "author": "sakibsadman108@gmail.com",
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "mongodb-memory-server": "^10.1.3",
    "prettier": "^2.8.8",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/yamljs": "^0.2.33",
    "axios": "^1.6.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "http-status": "^1.6.2",
    "mongodb": "^6.12.0",
    "mongoose": "^7.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.10.0",
    "yamljs": "^0.3.0",
    "zod": "^3.21.4"
  }
}
